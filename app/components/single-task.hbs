<li class="list-group-item {{if this.task.isComplete "is-complete"}} ">
  <div class="d-flex">
    <h5 class="card-title flex-fill">
      {{this.task.name}}
    </h5>
   <div class="toggle-done ml-auto">
      <div class="btn-group btn-group-sm" role="group">
        {{#if this.task.isPinned}}
          <BsButton @type="secondary"  onclick={{action this.pinTask (mut this.task.isPinned) false}}>Unpin</BsButton>
        {{else}}
          <BsButton @type="secondary" onclick={{action this.unPinTask (mut this.task.isPinned) true}}>Pin</BsButton>
        {{/if}}
        {{#if this.task.isComplete}}
          <BsButton @type="primary" onClick={{action this.inCompleteTask (mut this.task.isComplete) false}}>Undo</BsButton>
        {{else}}
          <BsButton @type="primary" onClick={{action this.completeTask (mut this.task.isComplete) true}}>Done</BsButton>
        {{/if}}
      </div> 
    </div>
  </div>
  <div class="task-description">
    {{this.task.description}}
  </div>
</li>